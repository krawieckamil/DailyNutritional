<li class="col-md-4">
  <%= link_to user_meal_path(id: meal.id) do %>
  <div class="thumbnail" style="padding: 0">
    <div class="caption">
      <h3><%= meal.name %></h3>
      <p><%= meal.date %></p>
      <small pull-right><i class="fa fa-clock-o"></i> <%# activity.date.strftime("%d/%m/%Y")%></small>
    </div>
    <div class="modal-footer" style="text-align: left">
      <p>Fit+Points</p>
      <div class="progress">

        <div class="progress-bar" role="progressbar" aria-valuenow="<%# activity.fitpoints %>" aria-valuemin="0" aria-valuemax="1000" style="
        width: <%# activity.fitpoints*0.1 %>%;">
            <span class="sr-only"><%# activity.fitpoints %></span>
        </div>
      </div>
    </div>
  </div>
  <% end  %>
</li>
