<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">
      <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" class="">Add new meal</a>
    </h4>
  </div>
  <div id="collapseOne" class="panel-collapse collapse in" style="">
    <div class="panel-body">
      <%= form_for @meal do |f| %>
      <div class="input-group">
        <%= f.label :name %>
        <%= f.text_field :name, :required => true, :class => "form-control" %>
      </div>
      <div class="input-group">
        <%= f.label :date %><br/>
        <%= f.datetime_select :date, :required => true, :class => "form-control" %><br/>
      </div>
      <%= f.fields_for :products do |builder| %>
              <%= render "product_fields", :f => builder %>
          <% end %>
      <div class="padding-top">
        <%= f.submit "Add", :class => "btn btn-info"  %>
      </div>
      <% end %>
    </div>
  </div>
</div>
